<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FinishRentActivity">

    <!-- Foto do Carro -->
    <ImageView
        android:id="@+id/ivCarPhoto"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Foto do carro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título: Dados do Usuário -->
    <TextView
        android:id="@+id/tvUserInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados do Usuário"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ivCarPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Nome do Usuário -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        app:layout_constraintTop_toBottomOf="@id/tvUserInfoTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Telefone do Usuário -->
    <TextView
        android:id="@+id/tvUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone: "
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- E-mail do Usuário -->
    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail: "
        app:layout_constraintTop_toBottomOf="@id/tvUserPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- CPF do Usuário -->
    <TextView
        android:id="@+id/tvUserCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF: "
        app:layout_constraintTop_toBottomOf="@id/tvUserEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Título: Dados do Carro -->
    <TextView
        android:id="@+id/tvCarInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados do Carro"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserCpf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Modelo do Carro -->
    <TextView
        android:id="@+id/tvCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo: "
        app:layout_constraintTop_toBottomOf="@id/tvCarInfoTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Ano do Carro -->
    <TextView
        android:id="@+id/tvCarYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ano: "
        app:layout_constraintTop_toBottomOf="@id/tvCarModel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Preço por dia -->
    <TextView
        android:id="@+id/tvCarPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço por dia: "
        app:layout_constraintTop_toBottomOf="@id/tvCarYear"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Título: Detalhes da Locação -->
    <TextView
        android:id="@+id/tvRentalDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes da Locação"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCarPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Período da Locação -->
    <TextView
        android:id="@+id/tvRentalPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Período: "
        app:layout_constraintTop_toBottomOf="@id/tvRentalDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Custo Total -->
    <TextView
        android:id="@+id/tvTotalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custo Total: "
        app:layout_constraintTop_toBottomOf="@id/tvRentalPeriod"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Botão de Finalizar Locação -->
    <Button
        android:id="@+id/btnFinishRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Locação"
        app:layout_constraintTop_toBottomOf="@id/tvTotalCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
