<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Imagem do carro -->
    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Nome do carro -->
    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Car Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivCar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PreÃ§o do carro -->
    <TextView
        android:id="@+id/tvCarPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="R$ 0.00"
        app:layout_constraintStart_toStartOf="@id/tvCarName"
        app:layout_constraintTop_toBottomOf="@id/tvCarName"
        app:layout_constraintEnd_toEndOf="@id/tvCarName" />
</androidx.constraintlayout.widget.ConstraintLayout>
